{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Upgrade container image on Dockerfile and build.yaml files.",
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "(^|/)Dockerfile$",
        "(^|/)build.yaml$"
      ],
      "matchStringsStrategy": "any",
      "matchStrings": [
        "ARG BUILD_FROM=(?<depName>.*?):(?<currentValue>[^@]+)(?:@(?<currentDigest>sha256:[a-f0-9]+))?\\s+",
        "(aarch64|armv7|x86_64):\\s[\"']?(?<depName>.*?):(?<currentValue>[^@]+)(?:@(?<currentDigest>sha256:[a-f0-9]+))?[\"']?\\s"
      ],
      "datasourceTemplate": "docker"
    }
  ]
}