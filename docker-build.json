{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Upgrade container image on Dockerfile and build.yaml files.",
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "(^|/)Dockerfile$"
      ],
      "matchStringsStrategy": "any",
      "matchStrings": [
        "ARG BUILD_FROM=(?<depName>.*?):(?<currentValue>[^@\\s]+)(?:@(?<currentDigest>sha256:[a-f0-9]+))?\\s+"
      ],
      "datasourceTemplate": "docker"
    },
    {
      "customType": "regex",
      "fileMatch": [
        "(^|/)build.yaml$"
      ],
      "matchStringsStrategy": "any",
      "matchStrings": [
        ":\\s(?<depName>[^:]+?):(?<currentValue>[^@\\s]+)(?:@(?<currentDigest>sha256:[a-f0-9]+))?"
      ],
       "autoReplaceStringTemplate": ": ghcr.io/chukysoria/baseimage-alpine:v0.6.25-3.20@sha256:058af9b1f3e48f0f88e37ae6f0b155afe75388add18cb11af652df316954dbfa",
      "datasourceTemplate": "docker"
    }
  ]
}
